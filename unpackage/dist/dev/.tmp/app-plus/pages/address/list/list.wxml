<view><view class="address-list"><block wx:for="{{addressObjects}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item"><view class="header"><text class="realname">{{item.full_name}}</text><text class="mobile">{{item.tel}}</text></view><view class="summary">{{item.prov_str+item.city_str+item.area_str+item.town_str+item.address}}</view><view class="footer"><view class="set-default" data-index="{{index}}" data-event-opts="{{[['tap',[['setDefault',['$event']]]]]}}" bindtap="__e"><icon type="{{item.is_default==1?'success_circle':'circle'}}"></icon><text>默认地址</text></view><view class="operation"><view class="container" data-index="{{index}}" data-event-opts="{{[['tap',[['edit',['$event']]]]]}}" bindtap="__e"><image src="../../../static/images/icon_edit.png"></image><text>编辑</text></view><view class="container" data-index="{{index}}" data-event-opts="{{[['tap',[['deleteFun',['$event']]]]]}}" bindtap="__e"><image src="../../../static/images/icon_delete.png"></image><text>删除</text></view></view></view></view></block></view><button class="address-add" type="warn" data-event-opts="{{[['tap',[['add',['$event']]]]]}}" bindtap="__e">添加地址</button></view>
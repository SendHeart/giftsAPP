  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient:horizontal;
  -webkit-box-direction:normal;
  -webkit-flex-direction:row;
          flex-direction:row;
  position: relative;
  color: #FFC9CE;
  margin: 40rpx 0 0 20rpx;
}
.balance-title-bal {
  font-size: 28rpx;
}
.balance-content  {
